<%- include('../front/header.ejs') %>
    <section class="banner">
        <div class="banner-box">
            <div class="intro-text">
                <div class="intro-text-box">
                    <h1>Publish Your Passions, Your Way</h1>
                    <p>Creat a unique and beautiful blog. a frequently updated web page used for personal commentary or business content. 
                        Blogs are often interactive and include sections at the bottom of individual blog posts where readers can leave comments.</p>
                </div>
            </div>
            <img src="/assets/images/banner.jpg" alt="banner" />
        </div>
    </section><br>
    <h1 class="text-center">Recent Blogs...</h1>
    <section class="featured-blog mtb-40">
        <div class="container">
            <div class="row">
                <% d.forEach((item)=>{ %>
                    <div class="col-md-4 card">
                        <div class="blog-box card-body">
                            <img src="<%= item.image.url %>" height="233" width="350" alt="blog1" />
                           <div class="card-title">
                                <%= item.title %>
                            </div>
                            <p>
                                <%= item.createdAt.toLocaleDateString() %>
                            </p>
                            <div class="card-text">
                                <%= item.description.slice(0,100) %>
                            </div>
                            <a href="/blogdetail/<%= item._id %>" class="btn btn-danger">Read more...</a>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
    </section>
    <%- include('../front/footer.ejs') %>